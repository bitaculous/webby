%section.contact
  .bar
    .shell
      %a.close{ href: '#', title: '{{\'close\' | translate}}' }
        %i{ class: 'icon-close-squared' }

  %header
    .shell
      {% if locale == 'en' %}
      :kramdown
        # Good to see you again!
      {% endif %}

      {% if locale == 'de' %}
      :kramdown
        # Sch√∂n Sie wieder zu sehen!
      {% endif %}

      .target-groups
        {% for target_group in contents.target_groups %}

        {% capture position %}{% if forloop.first %}first{% endif %}{% if forloop.last %}last{% endif %}{% endcapture %}

        {% assign identifier = target_group.identifier | downcase | dasherize %}

        .target-group{ class: '{{identifier}} {{position}}' }
          %h2.salutation {{target_group.salutation}}

          %p {{target_group.text}}

        {% endfor %}

  %footer
    .shell
      %h1 Footer
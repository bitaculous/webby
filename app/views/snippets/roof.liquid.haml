%header.roof
  .backstage
    .shell
      .contact
        {% if locale == 'en' %}
        :kramdown
          # Good to see you again!
        {% endif %}

        {% if locale == 'de' %}
        :kramdown
          # Sch√∂n Sie wieder zu sehen!
        {% endif %}

  .dashboard
    .shell
      %a.badge{ href: '{{ path }}', title: '{{bitaculous.title}} - {{bitaculous.claim}}' }
        %span.title {{bitaculous.title}}

        %span.claim {{bitaculous.claim}}

      %nav.main
        %ul.items
          {% for section in contents.sections %}

          {% assign identifier = section.identifier | downcase | dasherize %}

          %li{ class: '{{identifier}} {% if forloop.first %}first active{% endif %} {% if forloop.last %}last{% endif %} item' }
            %a.internal{ href: '#', title: '{{section.description}}' } {{section.title}}
          {% endfor %}

      %nav.channels
        %ul.items
          {% for channel in bitaculous.channels %}

          {% assign type = channel.type | downcase | dasherize %}

          %li{ class: '{{type}} {% if forloop.first %}first{% endif %} {% if forloop.last %}last{% endif %} item' }
            %a.external{ href: '{{channel.url}}', title: '{{channel.description}}', target: '_blank' }
              %i{ class: 'icon-{{type}}' }
          {% endfor %}

      .control-panel
        {% include locales %}

        {% assign contact = bitaculous.emails.first %}

        %a.contact{ href: 'mailto:{{contact.address}}', title: '{{contact.title}}' } {{contact.title}}
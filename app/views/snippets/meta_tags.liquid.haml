{% csrf_meta %}

%meta{ 'http-equiv' => 'x-ua-compatible', content: 'IE=edge' }/

%meta{ name: 'abstract', content: '{{page.meta_description | default: site.meta_description | truncatewords: 10}}' }/
%meta{ name: 'author', content: '{{site.author}}' }/
%meta{ name: 'copyright', content: 'Â©{{now | date: \'%Y\'}} {{site.author}}' }/
%meta{ name: 'description', content: '{{page.meta_description | default: site.meta_description}}' }/
%meta{ name: 'generator', content: '{{site.generator}}' }/
%meta{ name: 'keywords', content: '{{page.meta_keywords | default: site.meta_keywords}}' }/
%meta{ name: 'publisher', content: '{{site.publisher}}' }/
%meta{ name: 'robots', content: '{{site.robots}}' }/
%meta{ name: 'viewport', content: '{{site.viewport}}' }/

%meta{ property: 'og:description', content: '{{site.description}}' }/
%meta{ property: 'og:image', content: '{{site.image}}' }/
%meta{ property: 'og:title', content: '{{site.title}}' }/
%meta{ property: 'og:type', content: '{{site.type | downcase | dasherize}}' }/
%meta{ property: 'og:url', content: '{{site.url}}' }/

%meta{ itemprop: 'description', content: '{{site.description}}' }/
%meta{ itemprop: 'image', content: '{{site.image}}' }/
%meta{ itemprop: 'name', content: '{{site.name}}' }/


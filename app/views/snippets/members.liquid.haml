.members
  .shell
    {% for member in contents.team_members %}

    {% assign identifier = member.identifier | handleize %}

    {% capture position %}{% if forloop.first %}first{% endif %}{% if forloop.last %}last{% endif %}{% endcapture %}

    .member{ class: "{{identifier}} {{position}}" }
      {% if member.name %}
      .photo{ title: "{{member.name}}" }

      %p.name {{member.name}}
      {% endif %}

      {% if member.profession %}
      %p.profession {{member.profession}}
      {% endif %}

      {% if member.details %}
      %p.details {{member.details}}
      {% endif %}

    {% endfor %}